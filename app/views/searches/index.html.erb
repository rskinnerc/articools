<h1>Articools</h1>

  <%= form_with url: search_path, method: :get, data: { turbo_frame: 'search-results', controller: 'search'} do %>
    <%= text_field_tag :query, '', data: {'search-target': 'query', action: 'input->search#debounceInput blur->search#generateSearchSessionId keydown.enter->search#generateSearchSessionId'}, placeholder: 'Some placeholder' %>
    <%= hidden_field_tag :search_session_id, @search_id, data: {'search-target': 'searchSessionId'} %>
  <% end %>
<ul>
  <% @latest_articles.each do |article| %>
    <li class="article"><%= article.title %></li>
  <% end %>
</ul>

